<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hatim.dhuliawala.SplittheBill"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hatim.dhuliawala.SplittheBill.Splash"
            android:label="@string/app_name"
             android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="hatim.dhuliawala.SplittheBill.StartingPoint"
            android:label="@string/app_name"
             android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="hatim.dhuliawala.SplittheBill.STARTINGPOINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="hatim.dhuliawala.SplittheBill.Result"
            android:label="@string/app_name"
             android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="hatim.dhuliawala.SplittheBill.RESULT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
